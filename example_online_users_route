// Example usage of CheckOnlineUsers in a route
// Add this to your routes/index.go or create a new route

func OnlineUsers(writer http.ResponseWriter, request *http.Request) {
	// Check for users active within the last 5 minutes
	onlineUsers, err := data.CheckOnlineUsers(5)
	if err != nil {
		utils.ErrorMessage(writer, request, "Cannot get online users")
		return
	}
	
	// Create data structure for template
	pageData := struct {
		OnlineUsers []data.User
		Count       int
		Title       string
	}{
		OnlineUsers: onlineUsers,
		Count:       len(onlineUsers),
		Title:       "Online Users",
	}
	
	_, err = data.SessionCheck(writer, request)
	if err != nil {
		utils.GenerateHTML(writer, pageData, "layout", "public.navbar", "online_users")
	} else {
		utils.GenerateHTML(writer, pageData, "layout", "private.navbar", "online_users")
	}
}